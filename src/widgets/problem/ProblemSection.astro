---
import { SectionBadge } from "@/widgets/section-badge/badge";
import { ProblemList } from "./ProblemList";
---

<section class="relative py-24 lg:py-32 overflow-hidden" id="problem">
    {/* Background decorative elements */}
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full -z-10 pointer-events-none"
    >
        <div
            class="absolute top-0 left-1/4 w-96 h-96 bg-primary/5 rounded-full blur-[120px] opacity-50"
        >
        </div>
        <div
            class="absolute bottom-0 right-1/4 w-96 h-96 bg-primary/10 rounded-full blur-[120px] opacity-30"
        >
        </div>
    </div>

    <div class="container px-4 mx-auto">
        <div class="max-w-3xl mx-auto text-center mb-16 md:mb-20">
            <SectionBadge>PROBLEM</SectionBadge>
            <h2
                class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 text-foreground bg-clip-text"
            >
                Travel planning is broken in Central Asia
            </h2>
            <p
                class="text-lg md:text-xl text-muted-foreground font-medium max-w-2xl mx-auto"
            >
                Global platforms are static, fragmented, and not built for local
                travelers.
            </p>
        </div>

        <ProblemList client:load />
    </div>
</section>
