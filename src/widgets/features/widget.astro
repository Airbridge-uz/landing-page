---
import { Button } from "@/components/ui/button";
import type { Language, Translations } from "@/i18n/utils";
import { SectionBadge } from "@/widgets/section-badge/badge";
import { GridItems } from "./grid-items";

interface Props {
	lang: Language;
	t: Translations;
}

const { lang, t } = Astro.props;

// Mock data for avatars
---

<section id="features" class="py-24 relative">
	<div class="container mx-auto px-4 relative z-10">
		<div class="text-center max-w-full mx-auto mb-20">
			<SectionBadge>SOLUTION</SectionBadge>
			<h2
				class="text-4xl md:text-6xl font-bold mb-6 tracking-tight text-foreground balance animate-in fade-in slide-in-from-bottom-4 duration-700"
			>
				"Fragmented Chaos" to "One-Click Magic"
			</h2>
			<p
				class="text-xl text-muted-foreground mb-10 max-w-2xl mx-auto animate-in fade-in slide-in-from-bottom-6 duration-700 delay-100"
			>
				We don't just search. We understand, plan, and book.
			</p>
			<div
				class="flex flex-wrap justify-center gap-4 animate-in fade-in slide-in-from-bottom-8 duration-700 delay-200"
			>
				<Button
					className="bg-foreground text-background hover:bg-foreground/90 rounded-full px-8"
				>
					Get Started
				</Button>
				<Button
					variant="outline"
					className="border-border/50 backdrop-blur-sm rounded-full px-8"
				>
					Learn More
				</Button>
			</div>
		</div>
		<GridItems client:load />
	</div>
</section>

<style>
	.balance {
		text-wrap: balance;
	}
</style>
