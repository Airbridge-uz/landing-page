---
import { Sparkles } from "lucide-react";
import { cn } from "@/lib/utils";
import { AboutTabs } from "./components/about-tabs";
---

<section id="about-us" class="py-24 relative w-full overflow-hidden">
    {/* Optional: Add background effects if needed, e.g., gradient or blobs */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-primary/5 blur-[120px] rounded-full pointer-events-none -z-10" />

    <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col items-center text-center mb-16">
            <span class="bg-foreground text-background border border-border rounded-full px-3 py-2 text-xs font-medium flex items-center gap-2">
				About Us
			</span>
            
            <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-foreground mb-6">
                Our Journey & Vision
            </h2>
            
            <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto">
                Discover who we are, what drives us, and where we're headed. We are dedicated to making a lasting impact through innovation and community.
            </p>
        </div>

        <AboutTabs client:visible />
    </div>
</section>
