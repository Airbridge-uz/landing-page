---
import { Compare } from "@/components/ui/compare";
import type { Language, Translations } from "@/i18n/utils";

interface Props {
	lang: Language;
	t: Translations;
}

const { lang, t } = Astro.props;
---

		<section id="comparison" class="w-full py-24 overflow-hidden relative">
			<div class="container mx-auto px-4 relative z-10">
				{/* Header Section (Consistent with Features) */}
				<div class="text-center max-w-3xl mx-auto mb-16">
					<div class="flex justify-center mb-6">
						<span class="bg-foreground text-background border border-border rounded-full px-3 py-2 text-xs font-medium flex items-center gap-2">
							{t.comparison.badge}
						</span>
					</div>
					<h2 class="text-4xl md:text-5xl font-bold mb-6 tracking-tight text-foreground">
						{t.comparison.title}
					</h2>
					<p class="text-xl text-muted-foreground">
						{t.comparison.description}
					</p>
				</div>

				{/* Comparison Card Container */}
				<div class="w-full">
					<div class="relative rounded-3xl p-1 bg-muted/20 border border-border backdrop-blur-sm">
						{/* Glow Effect Behind */}
						<div class="absolute top-0 left-1/4 right-1/4 h-32 bg-primary/20 blur-[100px] -z-10 rounded-full pointer-events-none" />

						{/* Inner Content Config */}
						<div class="rounded-[22px] overflow-hidden bg-background/40 relative">
							{/* The Compare Component */}
							<div class="">
								{" "}
								{/* Add padding for the header */}
								<Compare
									firstImage="/images/old_way_comparison.jpg"
									secondImage="/images/comparison.jpg"
									firstImageClassName="object-cover object-left-top w-full"
									secondImageClassname="object-cover object-left-top w-full"
									className="w-full h-[600px] md:h-[700px]"
									slideMode="drag"
									autoplay={false}
									showHandlebar={true}
                                    client:load
								/>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>